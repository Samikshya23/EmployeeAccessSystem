@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<div class="register-page">
    <div class="register-card shadow-lg">

        <div class="text-center mb-4">
            <h2 class="fw-bold text-uppercase mb-2">Create Account</h2>
            <p class="text-muted mb-0">Please fill in the details below.</p>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form asp-action="Register" method="post" class="mt-4">

            <div class="mb-3">
                <label class="form-label fw-semibold">Full Name</label>
                <input name="fullName"
                       class="form-control form-control-lg rounded-3"
                       placeholder="Enter your full name"
                       required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Email</label>
                <input name="email" type="email"
                       class="form-control form-control-lg rounded-3"
                       placeholder="Enter your email"
                       required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Password</label>
                <input name="password" type="password"
                       class="form-control form-control-lg rounded-3"
                       placeholder="**********"
                       required />
            </div>

            <div class="mb-4">
                <label class="form-label fw-semibold">Confirm Password</label>
                <input name="confirmPassword" type="password"
                       class="form-control form-control-lg rounded-3"
                       placeholder="**********"
                       required />
            </div>

            <button type="submit"
                    class="btn btn-primary btn-lg w-100 rounded-3 py-2 fw-semibold">
                Register
            </button>

            <div class="text-center mt-4">
                <span class="text-muted">Already have an account?</span>
                <a asp-action="Login" class="ms-1 fw-semibold login-link">
                    Login
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    html, body {
        height: 100%;
        margin: 0;
    }

    .register-page {
        min-height: 100vh;
        background: #0b1b3a; /* navy blue */
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        overflow: hidden; /* removes scrollbar */
    }

    .register-card {
        width: 100%;
        max-width: 560px;
        background: #ffffff;
        border-radius: 18px;
        padding: 40px 36px;
        border: 1px solid rgba(0,0,0,.06);
    }

    .form-control {
        border: 1px solid #d9d9d9;
        box-shadow: none !important;
    }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 .2rem rgba(13,110,253,.15) !important;
        }

    .login-link {
        text-decoration: none;
        color: #0d6efd;
    }

        .login-link:hover {
            text-decoration: underline;
        }
</style>
