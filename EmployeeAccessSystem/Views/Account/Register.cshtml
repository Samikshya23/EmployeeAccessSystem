@{
    ViewData["Title"] = "Register";
    Layout = "_AuthLayout";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

<div class="auth-bg">
    <div class="auth-container">

        <div class="auth-card">

            <div class="text-center mb-4">
                <h2 class="auth-title">Create Account</h2>
                <p class="auth-subtitle">Please fill in the details below.</p>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form asp-action="Register" method="post">

                <div class="mb-3">
                    <label class="form-label">Full Name</label>
                    <input name="fullName"
                           class="form-control"
                           placeholder="Enter your full name"
                           required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input name="email" type="email"
                           class="form-control"
                           placeholder="Enter your email"
                           required />
                </div>

                <select name="departmentId" class="form-control" asp-items="ViewBag.Departments">
                    <option value="">-- Select Department --</option>
                </select>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Password</label>
                        <input name="password" type="password"
                               class="form-control"
                               placeholder="Enter password"
                               required />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Confirm Password</label>
                        <input name="confirmPassword" type="password"
                               class="form-control"
                               placeholder="Confirm password"
                               required />
                    </div>
                </div>

                <button type="submit" class="btn auth-btn w-100">
                    Register
                </button>

                <div class="text-center mt-3">
                    <span class="text-muted">Already have an account?</span>
                    <a asp-action="Login" class="auth-link fw-semibold ms-1">Login</a>
                </div>

            </form>

        </div>

    </div>
</div>

<style>
    html, body {
        height: 100%;
        margin: 0;
        font-family: "Poppins", "Inter", system-ui, sans-serif;
        background: #f4f8fd;
    }

    .auth-bg {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .auth-container {
        width: 100%;
        max-width: 520px;
        background: #ffffff;
        border-radius: 14px;
        border: 1px solid #e3eaf2;
        box-shadow: 0 20px 40px rgba(0, 40, 100, 0.08);
        padding: 36px 34px;
    }

    .auth-card {
        width: 100%;
    }

    .auth-title {
        font-size: 28px;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 6px;
    }

    .auth-subtitle {
        font-size: 14px;
        color: #64748b;
        margin: 0;
    }

    .form-label {
        font-size: 13px;
        font-weight: 600;
        color: #334155;
        margin-bottom: 6px;
    }

    .form-control {
        height: 44px;
        border-radius: 8px;
        border: 1px solid #dbe5f1;
        padding: 0 12px;
        font-size: 14px;
        box-shadow: none !important;
    }

        .form-control:focus {
            border-color: #2563eb;
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.2) !important;
        }

    .auth-btn {
        height: 40px;
        border-radius: 6px;
        background-color: #2563eb;
        border: 1px solid #2563eb;
        color: #ffffff;
        font-size: 14px;
        font-weight: 600;
        box-shadow: none;
        transition: background 0.15s ease, border-color 0.15s ease;
    }

        .auth-btn:hover {
            background-color: #1e4fd6;
            border-color: #1e4fd6;
            color: #ffffff;
        }

    .auth-link {
        color: #2563eb;
        text-decoration: none;
        font-size: 14px;
    }

        .auth-link:hover {
            text-decoration: underline;
        }

    @@media (max-width: 576px) {
        .auth-container {
            padding: 28px 22px;
        }
    }
</style>
