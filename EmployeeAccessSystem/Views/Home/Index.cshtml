@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "";
    var isLoggedIn = Context.Session.GetInt32("AccountId") != null;
}

<div class="container-fluid">

    <div class="row mb-4">
        <div class="col">
            <h2 class="fw-bold">Employee Access System</h2>
            <p class="text-muted">
                Secure system to manage employee access, categories, and permissions.
            </p>
        </div>
    </div>

    @if (!isLoggedIn)
    {
        <div class="row justify-content-center">
            <div class="col-lg-6">

                <div class="card shadow-sm">
                    <div class="card-body p-4 text-center">

                        <h4 class="mb-3">Get Started</h4>

                        <p class="text-muted mb-4">
                            Please login if you already have an account,
                            or register to create a new one.
                        </p>

                        <div class="d-flex justify-content-center gap-3">
                            <a asp-controller="Account" asp-action="Login"
                               class="btn btn-primary px-4">
                                Login
                            </a>

                            <a asp-controller="Account" asp-action="Register"
                               class="btn btn-outline-secondary px-4">
                                Register
                            </a>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    }

</div>
