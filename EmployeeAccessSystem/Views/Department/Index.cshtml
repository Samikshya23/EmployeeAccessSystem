@model IEnumerable<EmployeeAccessSystem.Models.Department>

<h2>Departments</h2>

<p>
    <a asp-action="Create">Add Department</a>
</p>

<table border="1" cellpadding="6">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Actions</th>
    </tr>

    @foreach (var d in Model)
    {
        <tr>
            <td>@d.DepartmentId</td>
            <td>@d.DepartmentName</td>
            <td>
                <a asp-action="Edit" asp-route-id="@d.DepartmentName">Edit</a> |
                <a asp-action="Delete" asp-route-id="@d.DepartmentName">Delete</a>
            </td>
        </tr>
    }
</table>
