@model EmployeeAccessSystem.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-4">

        <div class="card card-danger">
            <div class="card-header">
                <h3 class="card-title">Delete Employee</h3>
            </div>

            <div class="card-body">
                <p class="mb-2">Are you sure you want to delete this employee?</p>

                <div class="callout callout-danger">
                    <h5 class="mb-1">@Model.FullName</h5>
                    <p class="mb-0 text-muted">@Model.Email</p>
                </div>
            </div>

            <div class="card-footer d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Cancel
                </a>

                <form asp-action="Delete" method="post" class="m-0">
                    <input type="hidden" asp-for="EmployeeId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </form>
            </div>
        </div>

    </div>
</div>
