@model EmployeeAccessSystem.Models.Employee

@{
    ViewData["Title"] = "";
}

<section class="content details-content">
    <div class="container-fluid details-container">

        <div class="card details-card delete-card">
            <div class="card-header bg-danger text-white">
                <h3 class="card-title mb-0">Delete Employee</h3>
            </div>

            <div class="card-body">

                <p class="mb-3 delete-text">Are you sure you want to delete this employee?</p>

                <div class="delete-callout">
                    <div class="delete-strip"></div>
                    <div>
                        <h5 class="mb-1 fw-semibold">@Model.FullName</h5>
                        <p class="mb-0 text-muted">@Model.Email</p>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="details-actions delete-actions">
                    <a asp-action="Index" class="btn btn-pill btn-back">
                        Back
                    </a>

                    <form asp-action="Delete" method="post" class="m-0">
                        <input type="hidden" asp-for="EmployeeId" />
                        <button type="submit" class="btn btn-danger btn-pill btn-delete">
                            Delete
                        </button>
                    </form>
                </div>

            </div>
        </div>

    </div>
</section>

@section Styles {
    <style>
        .details-content {
            padding-top: 4px !important;
            padding-bottom: 4px !important;
        }

        .details-container {
            padding-top: 0 !important;
            padding-bottom: 0 !important;
        }

        .details-card {
            border-radius: 14px;
            margin-bottom: 8px;
            overflow: hidden;
        }

            .details-card .card-body {
                padding: 22px 24px;
            }

        .delete-text {
            font-size: 18px;
        }
        .delete-callout {
            display: flex;
            align-items: center;
            gap: 14px;
            background: #fff;
            border: 1px solid #e6e6e6;
            border-radius: 12px;
            padding: 16px 18px;
            box-shadow: 0 1px 6px rgba(0,0,0,0.06);
            margin-top: 6px;
        }

        .delete-strip {
            width: 6px;
            height: 64px;
            border-radius: 10px;
            background: #dc3545;
            flex-shrink: 0;
        }
        .details-actions {
            display: flex;
            justify-content: flex-end;
            gap: 18px;
            margin-top: 22px;
            flex-wrap: wrap;
        }
        .btn-pill {
            border-radius: 999px;
            padding: 10px 28px;
            font-size: 16px;
            font-weight: 500;
            border: 2px solid transparent;
            box-shadow: none;
        }
        .btn-back {
            background-color: #fff;
            color: #6c757d;
            border-color: #6c757d;
        }

            .btn-back:hover {
                background-color: #f4f6f9;
                color: #6c757d;
                border-color: #6c757d;
            }
        .btn-delete {
            border-color: #dc3545;
        }
    </style>
}
