@model EmployeeAccessSystem.Models.Employee

@{
    ViewData["Title"] = "";
}

<section class="content details-content">
    <div class="container-fluid details-container">

        <div class="card details-card">
            <div class="card-header bg-white">
                <h3 class="card-title mb-0">Employee Details</h3>
            </div>

            <div class="card-body">

                <table class="table table-bordered">
                    <tr>
                        <th style="width:260px;">Employee ID</th>
                        <td>@Model.EmployeeId</td>
                    </tr>
                    <tr>
                        <th>Full Name</th>
                        <td>@Model.FullName</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Department</th>
                        <td>@Model.DepartmentName</td>
                    </tr>
                </table>

                <div class="details-actions">
                    <a asp-action="Edit"
                       asp-route-id="@Model.EmployeeId"
                       class="btn btn-warning btn-pill">
                        Edit
                    </a>

                    <a asp-action="Index"
                       class="btn btn-pill btn-back">
                        Back
                    </a>
                </div>

            </div>
        </div>

    </div>
</section>

@section Styles {
    <style>
        .details-content {
            padding-top: 4px !important;
            padding-bottom: 4px !important;
        }
        .details-container {
            padding-top: 0 !important;
            padding-bottom: 0 !important;
        }

        .details-card {
            border-radius: 14px;
            margin-top: 0;
            margin-bottom: 8px;
        }

            .details-card .card-body {
                padding: 22px 24px;
            }
        .table th {
            background-color: #f8f9fa;
            font-weight: 600;
        }
        .details-actions {
            display: flex;
            justify-content: flex-end;
            gap: 18px;
            margin-top: 22px;
        }

        .btn-pill {
            border-radius: 999px;
            padding: 10px 28px;
            font-size: 16px;
            font-weight: 500;
            border: 2px solid transparent;
            box-shadow: none;
        }

        .btn-back {
            background-color: #fff;
            color: #6c757d;
            border-color: #6c757d;
        }

            .btn-back:hover {
                background-color: #f4f6f9;
                color: #6c757d;
                border-color: #6c757d;
            }
    </style>
}
