@model List<EmployeeAccessSystem.Models.Category>

@{
    ViewData["Title"] = "";
    int i = 1;
}

<section class="content pt-3">
    <div class="container-fluid">

        <div class="card shadow-sm category-card">
            <div class="card-header bg-white category-header">
                <h3 class="card-title mb-0">System Categories</h3>
                <a asp-action="Create" class="btn btn-primary btn-sm btn-pill add-btn">
                    Add Category
                </a>
            </div>

            <div class="card-body">
                <table class="table table-bordered table-hover align-middle">
                    <thead>
                        <tr>
                            <th style="width:80px;">ID</th>
                            <th>Category Name</th>
                            <th style="width:220px;" class="text-center">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@item.CategoryName</td>

                                <td class="text-center">
                                    <!-- GAP FIX -->
                                    <div class="action-buttons">
                                        <a asp-action="Edit"
                                           asp-route-id="@item.CategoryId"
                                           class="btn btn-warning btn-sm btn-pill">
                                            Edit
                                        </a>

                                        <a asp-action="Delete"
                                           asp-route-id="@item.CategoryId"
                                           class="btn btn-danger btn-sm btn-pill">
                                            Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</section>

@section Styles {
    <style>
        .category-card {
            border-radius: 14px;
            overflow: hidden;
        }
        .category-header {
            display: flex;
            align-items: center;
        }
        .add-btn {
            margin-left: auto;
        }

        .btn-pill {
            border-radius: 999px;
            padding: 6px 16px;
            font-weight: 500;
            box-shadow: none;
        }
        .action-buttons {
            display: inline-flex;
            gap: 12px; 
        }

        .table thead th {
            background-color: #f8f9fa;
            font-weight: 600;
        }
    </style>
}
