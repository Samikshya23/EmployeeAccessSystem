@model List<EmployeeAccessSystem.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container mt-4">
    <h3 class="mb-3">System Categories</h3>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width:80px;">ID</th>
                            <th>Category Name</th>
                            <th style="width:150px;" class="text-center">Active</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CategoryId</td>
                                <td class="fw-semibold">@item.CategoryName</td>

                                <td class="text-center">
                                    <form asp-action="Toggle" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@item.CategoryId" />

                                        <input class="form-check-input big-check"
                                               type="checkbox"
                                               @(item.IsActive ? "checked" : "")
                                               onchange="this.form.submit()" />
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <small class="text-muted">
                Tip: Click the checkbox to enable/disable a category.
            </small>
        </div>
    </div>
</div>

<style>
    /* Make checkbox bigger like your image */
    .big-check {
        width: 28px;
        height: 28px;
        cursor: pointer;
    }
</style>
