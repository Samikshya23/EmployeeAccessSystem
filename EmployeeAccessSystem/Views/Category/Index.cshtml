@model List<EmployeeAccessSystem.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

@{
    int i = 1;
}


<div class="card">
    <div class="card-header">
        <h3 class="card-title">System Categories</h3>

        <div class="card-tools">
            <a asp-action="Create" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i> Add Category
            </a>
        </div>
    </div>

    <div class="card-body">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width:80px;">ID</th>
                    <th>Category Name</th>
                    <th style="width:120px;" class="text-center">Active</th>
                    <th style="width:200px;" class="text-center">Actions</th>
                </tr>
            </thead>

            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)

                    {
                        <tr>
                            <td>@i</td>

                            <td>@item.CategoryName</td>

                            <td class="text-center">
                                <form asp-action="Toggle" method="post">
                                    <input type="hidden" name="id" value="@item.CategoryId" />
                                    <input type="checkbox"
                                           style="width:18px;height:18px;cursor:pointer;"
                                           @(item.IsActive ? "checked" : "")
                                           onchange="this.form.submit()" />
                                </form>
                            </td>

                            <td class="text-center">
                                <a asp-action="Edit"
                                   asp-route-id="@item.CategoryId"
                                   class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>

                                <a asp-action="Delete"
                                   asp-route-id="@item.CategoryId"
                                   class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                       
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
