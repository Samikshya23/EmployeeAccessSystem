@model EmployeeAccessSystem.Models.Category

@{
    ViewData["Title"] = "Add Category";
}

<div class="container mt-4">
    <h3 class="mb-3">Add New Category</h3>

    <form asp-action="Create" method="post" class="card p-4 shadow-sm">
        <div class="mb-3">
            <label asp-for="CategoryName" class="form-label">Category Name</label>
            <input asp-for="CategoryName" class="form-control" placeholder="e.g., Database" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </div>
    </form>
</div>
