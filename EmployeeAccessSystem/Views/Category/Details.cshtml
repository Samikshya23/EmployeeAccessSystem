@model EmployeeAccessSystem.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-4">
    <h3 class="text-danger mb-3">Delete Category</h3>

    <div class="alert alert-warning">
        Are you sure you want to delete this category?
    </div>

    <div class="card shadow-sm p-4">
        <p class="mb-2"><strong>ID:</strong> @Model.CategoryId</p>
        <p class="mb-0"><strong>Name:</strong> @Model.CategoryName</p>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="CategoryId" />

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
