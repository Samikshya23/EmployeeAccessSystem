@model EmployeeAccessSystem.Models.Category

@{
    ViewData["Title"] = "";
}

<section class="content details-content">
    <div class="container-fluid details-container">

        <div class="card details-card delete-card">
            <div class="card-header bg-danger text-white">
                <h3 class="card-title mb-0">Delete Category</h3>
            </div>

            <div class="card-body">

                <p class="mb-3 delete-text">Are you sure you want to delete this category?</p>

                <table class="table table-bordered">
                    <tr>
                        <th style="width:260px;">Name</th>
                        <td>@Model.CategoryName</td>
                    </tr>
                    <tr>
                        <th>Active</th>
                        <td>@(Model.IsActive ? "Yes" : "No")</td>
                    </tr>
                </table>
                <div class="details-actions">
                    <a asp-action="Index" class="btn btn-pill btn-back">
                        Back
                    </a>

                    <form asp-action="Delete" method="post" class="m-0">
                        <input type="hidden" asp-for="CategoryId" />
                        <button type="submit" class="btn btn-danger btn-pill btn-delete">
                            Delete
                        </button>
                    </form>
                </div>

            </div>
        </div>

    </div>
</section>

@section Styles {
    <style>
        .details-content {
            padding-top: 4px !important;
            padding-bottom: 4px !important;
        }

        .details-container {
            padding-top: 0 !important;
            padding-bottom: 0 !important;
        }

        .details-card {
            border-radius: 14px;
            margin-bottom: 8px;
            overflow: hidden;
        }

            .details-card .card-body {
                padding: 22px 24px;
            }

        .delete-text {
            font-size: 18px;
        }
        .table th {
            background-color: #f8f9fa;
            font-weight: 600;
        }
        .details-actions {
            display: flex;
            justify-content: flex-end;
            gap: 18px;
            margin-top: 22px;
            flex-wrap: wrap;
        }
        .btn-pill {
            border-radius: 999px;
            padding: 6px 18px; 
            font-size: 14px;
            font-weight: 500;
            border: 2px solid transparent;
            box-shadow: none;
        }
        .btn-back {
            background-color: #fff;
            color: #6c757d;
            border-color: #6c757d;
        }

            .btn-back:hover {
                background-color: #f4f6f9;
                color: #6c757d;
                border-color: #6c757d;
            }
        .btn-delete {
            border-color: #dc3545;
        }
    </style>
}
