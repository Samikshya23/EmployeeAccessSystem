@model EmployeeAccessSystem.Models.SubCategory

@{
    ViewData["Title"] = "";
}

<section class="content pt-3">
    <div class="container-fluid">

        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-7 col-xl-6">

                <div class="card sub-del-card card-danger">
                 
                    <div class="card-header sub-del-header">
                        <h3 class="card-title mb-0">Delete SubCategory</h3>
                    </div>

                  
                    <div class="card-body sub-del-body">

                        <p class="mb-3 text-muted">
                            Are you sure you want to delete this SubCategory?
                        </p>

                   
                        <div class="sub-del-callout">
                            <div class="sub-del-row">
                                <div class="sub-del-label">ID</div>
                                <div class="sub-del-value">@Model.SubCategoryId</div>
                            </div>

                            <div class="sub-del-row">
                                <div class="sub-del-label">Category</div>
                                <div class="sub-del-value">
                                    @(string.IsNullOrWhiteSpace(Model.CategoryName) ? "-" : Model.CategoryName)
                                </div>
                            </div>

                            <div class="sub-del-row">
                                <div class="sub-del-label">Server IP</div>
                                <div class="sub-del-value">@Model.ServerIP</div>
                            </div>

                            <div class="sub-del-row">
                                <div class="sub-del-label">Name</div>
                                <div class="sub-del-value">
                                    @(string.IsNullOrWhiteSpace(Model.ServerName) ? "-" : Model.ServerName)
                                </div>
                            </div>
                        </div>

                    </div>

                    <!-- Footer -->
                    <div class="card-footer sub-del-footer">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-smx">
                            Cancel
                        </a>

                        <form asp-action="Delete" method="post" class="m-0">
                            <input type="hidden" name="id" value="@Model.SubCategoryId" />
                            <button type="submit" class="btn btn-danger btn-smx">
                                Delete
                            </button>
                        </form>
                    </div>

                </div>

            </div>
        </div>

    </div>
</section>

@section Styles {
    <style>
        .sub-del-card {
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 8px 18px rgba(0,0,0,.08);
            border: 1px solid #edf0f2;
        }

        .sub-del-header {
            padding: 18px 22px;
        }

        .sub-del-body {
            padding: 22px;
        }

        /* Info box */
        .sub-del-callout {
            border: 1px solid #f1c0c6;
            background: #fff;
            border-left: 6px solid #dc3545;
            border-radius: 12px;
            padding: 12px 14px;
        }

        .sub-del-row {
            display: grid;
            grid-template-columns: 130px 1fr;
            padding: 10px 6px;
            border-bottom: 1px solid #f2f2f2;
        }

            .sub-del-row:last-child {
                border-bottom: none;
            }

        .sub-del-label {
            font-weight: 700;
            color: #1f2937;
        }

        .sub-del-value {
            color: #111827;
        }

   
        .sub-del-footer {
            padding: 14px 22px;
            background: #fff;
            display: flex;
            justify-content: flex-end;
            gap: 10px;
            align-items: center;
        }

       
        .btn-smx {
            padding: 8px 18px;
            border-radius: 10px;
            font-size: 14px;
            font-weight: 600;
            min-width: 92px;
        }
    </style>
}
