@model EmployeeAccessSystem.Models.SubCategory

@{
    ViewData["Title"] = "";
}

<section class="content details-content">
    <div class="container-fluid details-container">

        <div class="card details-card">
            <div class="card-header bg-white">
                <h3 class="card-title mb-0">Edit SubCategory</h3>
            </div>

            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="SubCategoryId" />

                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Category</label>
                        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
                            <option value="">-- Select Category --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                 
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Server IP</label>
                        <input asp-for="ServerIP" class="form-control" />
                        <span asp-validation-for="ServerIP" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Name</label>
                        <input asp-for="ServerName" class="form-control" />
                        <span asp-validation-for="ServerName" class="text-danger"></span>
                    </div>

                  
                    <div class="details-actions">
                        <button type="submit" class="btn btn-warning btn-pill-sm">
                            Update
                        </button>

                        <a asp-action="Index" class="btn btn-pill-sm btn-back">
                            Back
                        </a>
                    </div>
                </form>
            </div>

        </div>

    </div>
</section>

@section Styles {
    <style>
        .details-content {
            padding-top: 6px !important;
            padding-bottom: 6px !important;
        }

        .details-container {
            padding-top: 0 !important;
            padding-bottom: 0 !important;
        }

        .details-card {
            border-radius: 14px;
            overflow: hidden;
            margin-bottom: 10px;
        }

            .details-card .card-body {
                padding: 22px 24px;
            }

        .details-actions {
            display: flex;
            justify-content: flex-end;
            gap: 14px;
            margin-top: 18px;
            flex-wrap: wrap;
        }

        .btn-pill-sm {
            border-radius: 999px;
            padding: 6px 16px; 
            font-size: 14px; 
            font-weight: 600;
            border: 2px solid transparent;
            box-shadow: none;
            min-width: 90px;
        }

    
        .btn-back {
            background-color: #fff;
            color: #6c757d;
            border-color: #6c757d;
        }

            .btn-back:hover {
                background-color: #f4f6f9;
                color: #6c757d;
                border-color: #6c757d;
            }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
