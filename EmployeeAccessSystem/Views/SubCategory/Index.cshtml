@model IEnumerable<EmployeeAccessSystem.Models.SubCategory>

@{
    ViewData["Title"] = "";
    int sn = 1;
}

<section class="content pt-2 pb-2">
    <div class="container-fluid">

        <div class="card shadow-sm subcat-card">

            <div class="card-header bg-white d-flex align-items-center w-100 subcat-header">
                <h3 class="card-title mb-0">SubCategory List</h3>

                <div class="card-tools ml-auto">
                    <a asp-action="Create" class="btn btn-primary btn-add-sm">
                        + Add SubCategory
                    </a>
                </div>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover mb-0 subcat-table">
                        <thead>
                            <tr>
                                <th style="width:90px;">ID</th>
                                <th>Category</th>
                                <th style="width:220px;">Server IP</th>
                                <th>Name</th>
                                <th style="width:210px;" class="text-center">Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var s in Model)
                                {
                                    <tr>
                                        <td>@sn</td>
                                        <td>@s.CategoryName</td>
                                        <td>@s.ServerIP</td>
                                        <td>@s.ServerName</td>

                                        <td class="text-center">
                                            <div class="action-wrap">
                                                <a asp-action="Edit"
                                                   asp-route-id="@s.SubCategoryId"
                                                   class="btn btn-warning btn-action-sm">
                                                    Edit
                                                </a>

                                                <a asp-action="Delete"
                                                   asp-route-id="@s.SubCategoryId"
                                                   class="btn btn-danger btn-action-sm">
                                                    Delete
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    sn++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">
                                        No subcategories found.
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>

        </div>

    </div>
</section>

@section Styles {
    <style>
    
        .subcat-card {
            border-radius: 16px;
            overflow: hidden;
        }

      
        .subcat-header {
            padding: 16px 18px;
        }

        .subcat-table thead th {
            font-weight: 700;
            background: #fff;
            border-bottom: 2px solid #e5e7eb;
            padding: 12px 14px;
            font-size: 16px;
        }

        .subcat-table tbody td {
            padding: 14px 14px;
            vertical-align: middle;
            font-size: 15px;
        }

        .btn-add-sm {
            border-radius: 999px;
            padding: 6px 14px;
            font-size: 14px;
            font-weight: 600;
        }

      
        .action-wrap {
            display: inline-flex;
            gap: 10px; 
            align-items: center;
            justify-content: center;
        }

        .btn-action-sm {
            border-radius: 999px;
            padding: 6px 14px;
            font-size: 14px;
            font-weight: 600;
            min-width: 72px;
        }
    </style>
}
