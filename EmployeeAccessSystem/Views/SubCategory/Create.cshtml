@model EmployeeAccessSystem.Models.SubCategory

@{
    ViewData["Title"] = "";
}

<section class="content pt-3">
    <div class="container-fluid">

        <div class="card sub-form-card">
          
            <div class="card-header bg-white sub-form-header">
                <h3 class="card-title mb-0">Add SubCategory</h3>
            </div>

         
            <div class="card-body sub-form-body">

                <form asp-action="Create" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                 
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Category</label>
                        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
                            <option value="">-- Select Category --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                 
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Server IP</label>
                        <input asp-for="ServerIP" class="form-control" placeholder="Eg: 192.168.1.10" />
                        <span asp-validation-for="ServerIP" class="text-danger"></span>
                    </div>

                 
                    <div class="mb-2">
                        <label class="form-label fw-semibold">Name</label>
                        <input asp-for="ServerName" class="form-control" placeholder="Enter name" />
                        <span asp-validation-for="ServerName" class="text-danger"></span>
                    </div>

              
                    <div class="sub-form-actions">
                        <button type="submit" class="btn btn-success btn-smx">
                            Save
                        </button>

                        <a asp-action="Index" class="btn btn-outline-secondary btn-smx">
                            Cancel
                        </a>
                    </div>
                </form>

            </div>
        </div>

    </div>
</section>

@section Styles {
    <style>
        .sub-form-card {
            border-radius: 18px;
            overflow: hidden;
            border: 1px solid #edf0f2;
            box-shadow: 0 6px 16px rgba(0,0,0,.06);
        }

      
        .sub-form-header {
            padding: 18px 22px;
            border-bottom: 1px solid #eee;
        }

      
        .sub-form-body {
            padding: 22px;
            max-width: 980px; 
        }

 
        .sub-form-actions {
            display: flex;
            justify-content: flex-end;
            gap: 10px;
            margin-top: 18px;
        }

     
        .btn-smx {
            padding: 8px 18px;
            border-radius: 10px;
            font-size: 14px;
            font-weight: 600;
            min-width: 90px;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
